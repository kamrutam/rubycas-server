<%# coding: UTF-8 -%>
<div class="login-box-wrapper">
  <div class="login-box-title">
    <h3>Enter your email address</h3>
  </div>
  <%# coding: UTF-8 -%>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.3.1/jquery.min.js"></script>
  <div class="box login-user-box">
    <form method="post" action="<%= @form_action || "forgot_pwd" %>" id="forgot-pwd-form"
          onsubmit="submitbutton = document.getElementById('forgot-pwd-submit'); submitbutton.value='<%= t.notice.please_wait %>'; submitbutton.disabled=true; return true;">
      <input type="email" id="username" name="username" placeholder="Email" size="64" tabindex="1" accesskey="e"/>

      <div id="login-submit">
        <input type="hidden" id="lt" name="lt" value="<%= escape_html @lt %>"/>
        <input type="hidden" id="service" name="service" value="<%= escape_html @service %>"/>

        <div class="ac">
          <button class="login-button login-btn-green" tabindex="4" type="submit" id="forgot-pwd-submit"><%= t.button.send_instructions %></button>
        </div>
      </div>
    </form>
  </div>
</div>
