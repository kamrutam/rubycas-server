<%# coding: UTF-8 -%>

<form method="post" action="<%= @form_action || "signup" %>" id="signup-form">
 <div class="form-title">Create an account</div>

 <div class="reg-upload-ava clearfix">
   <div class="reg-upload-ava-preview"></div>
   <div class="reg-upload-ava-content">
     <div class="reg-upload-ava-title">Upload a profile picture</div>
     <div class="reg-upload-ava-uploader"><a href="#">Upload</a></div>
   </div>
 </div>

 <div class="form-inputs-block">
   <div class="form-input-line"><input class="form-input" type="email" placeholder="Email (username)"/></div>
   <div class="form-input-line"><input class="form-input" type="email" placeholder="Confirm Email"/></div>
   <div class="form-input-line"><input class="form-input" type="text" placeholder="Nickname"/></div>
   <div class="form-input-line"><input class="form-input" type="password" id="password" placeholder="Password"/></div>
   <div class="reg-hide-pass"><label><input type="checkbox" onclick="showPassword();"/> <%= t.label.show_password %></label></div>
 </div>

 <div class="reg-agree">By clicking Create Account you agree to our <a href="#">Privacy Policy</a></div>

 <div class="form-button-block"><button type="submit" class="form-button button-secondary-style">Create Account</button></div>
 </form>
<script>
   function showPassword() {
       var pwd = document.getElementById("password");
       if (pwd.type == "password")
         pwd.setAttribute('type', 'text');
       else
         pwd.setAttribute('type', 'password');
   }
 </script>

